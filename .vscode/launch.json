{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "gevent": true
        },
        {
            "name": "Run current locust scenario headless",
            "type": "debugpy",
            "request": "launch",
            "module": "locust",
            "args": [
                "-f",
                "${file}",
                "--headless",
                "--users=5"
            ],
            "console": "integratedTerminal",
            "gevent": true
        },
        {
            "name": "Run current locust scenario, autostart",
            "type": "debugpy",
            "request": "launch",
            "module": "locust",
            "args": [
                "-f",
                "${file}",
                "--users=5",
                "--autostart",
                "--print-stats",
                "-L=ERROR"
            ],
            "console": "integratedTerminal",
            "gevent": true
        },
        {
            "name": "(test debug only)",
            "type": "debugpy",
            "request": "launch",
            "gevent": true,
            "purpose": ["debug-test"]
        }
    ]
}